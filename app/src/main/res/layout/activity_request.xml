<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    android:orientation="vertical"
    tools:context=".activities.RequestActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:orientation="vertical">

    <ImageView
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/request" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#82E0AA"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="Add Request"
        android:textColor="#ffff"
        android:textSize="25sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textDateOfRequest"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date Of Request"
        android:padding="4dp"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dateOfRequest"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:clickable="true"
            android:focusable="false"
            android:inputType="date"
            android:padding="4dp"
            android:textSize="15sp"
            android:textStyle="bold" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- name of Requester label-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textNameOfRequester"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your name"
        android:padding="4dp"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/nameOfRequester"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hint="Enter your name"
            android:inputType="textCapWords"
            android:padding="4dp"
            android:textAllCaps="true" />
    </com.google.android.material.textfield.TextInputLayout>


    <!--department label-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textDepartment"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Department"
        android:padding="4dp"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/department"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hint="Enter Department"
            android:inputType="textCapWords"
            android:padding="4dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- amount Label -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textAmount"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Amount"
        android:padding="4dp"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/amountRequested"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hint="Enter Amount"
            android:inputType="number"
            android:padding="4dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- reason Label -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textReason"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Reason"
        android:padding="4dp"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/reason"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hint="Enter Reason"
            android:inputType="textMultiLine|textCapWords"
            android:padding="4dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/requestSubmit"
        android:layout_width="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="50dp"
        android:layout_marginBottom="12dp"
        android:text="Submit" />
    </LinearLayout>
</ScrollView>